<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            android:text="POST HELP " />
        <EditText
            android:id="@+id/editText_post_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:hint="Name"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/editText_psot_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:hint="PHONE NUMBER"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/editText_post_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="CURRENT LOCATION "
            android:textColor="@color/black"
            android:textColorHint="@color/hint_colour"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/editText_post_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="WRITE HELP MESSAGE"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/button_post_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            android:text="POST"
            android:onClick="post_help_button"/>
    </LinearLayout>
</LinearLayout>